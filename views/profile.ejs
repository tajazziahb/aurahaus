<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>BudgetBuddy | Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;700&family=Poppins:wght@400;500;700&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="profile-container">
    <header class="profile-header sticky-header anim-fadeUp">
      <div class="brand-lockup">
        <span class="brand-mark">$</span>
        <h1 class="profile-title brand-text-nowrap">BudgetBuddy Dashboard</h1>
      </div>
      <a href="/logout" class="logout-button">Logout</a>
    </header>

    <main class="profile-content">
      <section class="account-section card card-compact sticky-card anim-fadeUp">
        <h2 class="section-title">Account Details</h2>
        <div class="account-info stack-8">
          <p><strong>ID:</strong>
            <%= user._id %>
          </p>
          <p><strong>Email:</strong>
            <%= user.local && user.local.email ? user.local.email : '' %>
          </p>
          <a href="/unlink/local" class="unlink-button">Unlink Account</a>
        </div>
      </section>

      <section class="transactions-section card">
        <h2 class="section-title">Add Transaction</h2>
        <div class="add-transaction-form">
          <form action="/transactions" method="POST" class="transaction-form form-narrow stack-12">
            <div class="form-group">
              <label class="form-label">Type</label>
              <select name="type" class="form-control" required>
                <option value="expense">Expense</option>
                <option value="income">Income</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label">Amount</label>
              <input class="form-control" type="number" name="amount" step="0.01" min="0" required>
            </div>
            <div class="form-group">
              <label class="form-label">Category</label>
              <input class="form-control" type="text" name="category" placeholder="e.g., groceries, rent, work"
                required>
            </div>
            <div class="form-group">
              <label class="form-label">Date</label>
              <input class="form-control" type="date" name="date" required>
            </div>
            <div class="form-group">
              <label class="form-label">Note</label>
              <input class="form-control" type="text" name="note" placeholder="optional">
            </div>
            <button type="submit" class="submit-button">Add Transaction</button>
          </form>
        </div>

        <h2 class="section-title">Recent Transactions</h2>
        <% if (transactions && transactions.length) { %>
          <div class="table-scroll">
            <table class="transactions-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Type</th>
                  <th>Category</th>
                  <th>Amount</th>
                  <th>Note</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% transactions.forEach(function(t){ %>
                  <tr>
                    <td>
                      <%= new Date(t.date).toLocaleDateString() %>
                    </td>
                    <td class="transaction-type">
                      <%= t.type %>
                    </td>
                    <td>
                      <%= t.category %>
                    </td>
                    <td>
                      <%= (Number(t.amount) || 0).toLocaleString(undefined, { style:'currency', currency:'USD' }) %>
                    </td>
                    <td>
                      <%= t.note %>
                    </td>
                    <td>
                      <form class="inline-form" action="/transactions/<%= t._id %>/delete" method="POST">
                        <button class="delete-button" type="submit">Delete</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } else { %>
            <p class="empty-message">No transactions yet.</p>
            <% } %>
      </section>
    </main>
  </div>
</body>
</html>