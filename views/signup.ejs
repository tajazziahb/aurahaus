<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>AuraHaus â€¢ Sign Up</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/style.css" rel="stylesheet">
</head>

<body>
    <header class="site-header">
        <div class="brand">
            <span class="brand-mark">AH</span>
            <h1 class="brand-title">AuraHaus</h1>
        </div>
        <a href="/" class="btn btn-ghost">Home</a>
    </header>

    <div class="auth-page-signup">
        <section class="auth-card">
            <h2 class="section-title">Create account</h2>
            <% if (message && message.length) { %>
                <p class="flash">
                    <%= message %>
                </p>
                <% } %>

                    <form action="/signup" method="post" class="form-vertical">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="input" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="input" required>
                        </div>
                        <div class="form-actions">
                            <button class="btn btn-primary">Sign Up</button>
                        </div>
                    </form>

                    <p class="minor">Already have an account? <a href="/login" class="link">Log in</a></p>
        </section>
    </div>
</body>

</html>